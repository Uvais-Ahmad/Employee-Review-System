<link href="/css/adminBackground.css" rel="stylesheet" type="text/css">

<table class="table table-striped table-dark w-75 mx-auto mt-5" style="margin-bottom:44vh">
    
    <thead>
        <tr>
            <th scope="col">Sr No.</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Admin</th>
            <th scope="col" class="">Delete Emp</th>
            <th scope="col" class="">Admin</th>
        </tr>
    </thead>

    <tbody>
        <% let i=1; %> 
        <% for(user of users){ %>

            <tr>
                <th scope="row"><%= i %> </th> 
                <td><%= user.name %> </td>
                <td><%= user.email %> </td>
                <td><%= user.isAdmin %> </td>
                <td ><a role="button" href="/user/admin/removeEmp/<%= user._id %>" class="btn btn-danger">Delete</a></td>
                <td >
                    <!-- if user is admin them button is show otherwise not shown -->
                    <% if(user.isAdmin){ %>
                        <a role="button" href="/user/admin/removeFromAdmin/<%= user._id %>" class="btn btn-danger">Remove</a>
                    <% } %> 
                </td>
            </tr>
            <% i++; %> 
        <% } %> 
        
    </tbody>
  </table>
