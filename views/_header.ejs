<header>
    <nav class="navbar" style="background: linear-gradient(45deg, rgba(15,8,93,1) 27%, rgba(50,170,205,1) 67%);">

            <a class="navbar-brand ms-3" href="/">ER SYSTEM</a>
            <ul class="navbar-nav d-flex flex-row me-4">

              <!-- if user is logged in then show -->
              <% if(locals.user){  %>

                <li class="nav-item mx-4">
                  <a class="nav-link" aria-current="page" ><%= locals.user.name %></a>
                </li>

                <% if(locals.user.isAdmin){ %>
                  <li class="nav-item mx-4">
                    <a class="nav-link" aria-current="page" href="#" >Assign works</a>
                  </li>

                  <li class="nav-item mx-4">
                    <a class="nav-link" aria-current="page" href="#">Employees</a>
                  </li>

                  <li class="nav-item mx-4">
                    <a class="nav-link" aria-current="page" href="/user/register" >Add Employee</a>
                  </li>
                <% } %> 

                <li class="nav-item mx-4">
                  <a class="nav-link" href="/user/logout">Log out</a>
                </li>
              
              <!-- if user not signed in -->
              <% } else{ %>
                <li class="nav-item mx-4">
                  <a class="nav-link" aria-current="page" href="/user/login">Log In</a>
                </li>
                <li class="nav-item mx-4">
                  <a class="nav-link" href="/user/register">Register</a>
                </li>

              <% } %> 
                
                <li class="nav-item mx-4">
